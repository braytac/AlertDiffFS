echo -e "\n####################### SITIO 1 #######################\n"
cd /var/www/sitio1
find . -regex ".*\.\(sh\|py\|pyc\|exe\|php\|js\)"  -type f -printf '%TY-%Tm-%Td %.8TT %s %p\n' | sort -r | head -n 50
echo -e "\n########################################################\n"

